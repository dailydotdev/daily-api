{
   "name": "daily-api",
   "version": "0.0.1",
   "private": true,
   "scripts": {
      "start": "node ./node_modules/typeorm/cli.js migration:run && node index.js",
      "dev": "nodemon ./index.ts | pino-pretty",
      "lint": "eslint . --ext .js,.ts --max-warnings 0",
      "build": "tsc",
      "prebuild": "rm -rf build",
      "postbuild": "cp ormconfig.js package.json package-lock.json ./build",
      "test": "jest --testEnvironment=node",
      "pretest": "npm run lint && cross-env NODE_ENV=test npm run db:migrate:reset",
      "typeorm": "ts-node ./node_modules/typeorm/cli.js",
      "db:schema:sync": "npm run typeorm schema:sync",
      "db:schema:drop": "npm run typeorm schema:drop",
      "db:migrate:make": "npm run typeorm migration:generate -n",
      "db:migrate:latest": "npm run typeorm migration:run",
      "db:migrate:rollback": "npm run typeorm migration:revert",
      "db:migrate:reset": "npm run db:schema:drop && npm run db:migrate:latest",
      "decrypt": "gcloud --project daily-ops kms decrypt --plaintext-file=${FILE} --ciphertext-file=${FILE}.enc --location=global --keyring=daily-ci --key=${KEY}",
      "decrypt:prod": "FILE=./helm/values/prod.yaml KEY=daily-api-ci npm run decrypt",
      "encrypt": "gcloud --project daily-ops kms encrypt --plaintext-file=${FILE} --ciphertext-file=${FILE}.enc --location=global --keyring=daily-ci --key=${KEY}",
      "encrypt:prod": "FILE=./helm/values/prod.yaml KEY=daily-api-ci npm run encrypt"
   },
   "husky": {
      "hooks": {
         "pre-commit": "npm run encrypt:prod && git add helm/values/prod.yaml.enc"
      }
   },
   "dependencies": {
      "apollo-server-fastify": "^2.12.0",
      "fast-json-stringify": "^2.0.0",
      "fastify": "^2.13.1",
      "graphql": "^14.6.0",
      "pg": "^8.0.2",
      "reflect-metadata": "^0.1.13",
      "type-graphql": "^0.17.6",
      "typeorm": "0.2.24"
   },
   "devDependencies": {
      "@types/graphql": "^14.5.0",
      "@types/jest": "^25.2.1",
      "@types/node": "^13.13.2",
      "@types/supertest": "^2.0.8",
      "@typescript-eslint/eslint-plugin": "^2.29.0",
      "@typescript-eslint/parser": "^2.29.0",
      "apollo-server-testing": "^2.12.0",
      "cross-env": "^7.0.2",
      "eslint": "^6.8.0",
      "eslint-config-prettier": "^6.11.0",
      "eslint-plugin-prettier": "^3.1.3",
      "husky": "^4.2.5",
      "jest": "^25.4.0",
      "jest-junit": "^10.0.0",
      "nodemon": "^2.0.3",
      "pino-pretty": "^4.0.0",
      "prettier": "^2.0.5",
      "supertest": "^4.0.2",
      "ts-jest": "^25.4.0",
      "ts-node": "^8.9.0",
      "typescript": "3.8.3"
   }
}
