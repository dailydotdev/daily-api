{
  "name": "devkit-api",
  "version": "0.17.1",
  "main": "index.js",
  "author": "Ido Shamun <ido@elegantmonkeys.com>",
  "private": true,
  "engines": {
    "node": "~8.12.0"
  },
  "scripts": {
    "mocha": "NODE_ENV=test mocha",
    "lint": "eslint . --ext .js",
    "test": "yarn run lint && yarn run mocha",
    "build": "babel . -d build --source-maps --ignore build,node_modules,test && cp package.json yarn.lock ./build && cp -R src/views build/src",
    "babel-node": "babel-node",
    "watch": "nodemon --exec yarn run babel-node -- $npm_package_main | pino",
    "start": "node $npm_package_main",
    "deploy": "yarn build && cd build && gcloud --project devkit-prod app deploy app.yaml --no-promote && cd ..",
    "cron": "gcloud --project devkit-prod app deploy cron.yaml"
  },
  "dependencies": {
    "@google-cloud/pubsub": "^0.19.0",
    "@google-cloud/trace-agent": "^2.11.0",
    "@koa/cors": "2",
    "@slack/client": "^4.3.1",
    "handlebars": "^4.0.11",
    "jsonwebtoken": "^8.3.0",
    "knex": "^0.13.0",
    "koa": "^2.3.0",
    "koa-bodyparser": "^4.2.0",
    "koa-context-validator": "^0.4.1",
    "koa-etag": "^3.0.0",
    "koa-generic-session-knex": "^1.0.1",
    "koa-jwt": "^3.3.2",
    "koa-pino-logger": "^2.1.1",
    "koa-router": "^7.2.1",
    "koa-session": "^5.8.1",
    "koa-useragent": "^1.0.0",
    "koa-views": "^6.1.3",
    "lodash": "^4.17.10",
    "mysql": "^2.15.0",
    "pino": "^4.7.3",
    "request": "^2.85.0",
    "request-promise-native": "^1.0.5",
    "twitter": "^1.7.1",
    "uuid": "^3.1.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "eslint": "^4.9.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-chai-friendly": "^0.4.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-mocha": "^4.11.0",
    "knex-cleaner": "^1.1.4",
    "mocha": "^4.0.1",
    "nock": "^9.4.2",
    "nodemon": "^1.12.1",
    "sinon": "^4.0.1",
    "sinon-chai": "^2.14.0",
    "supertest": "^3.0.0"
  }
}
